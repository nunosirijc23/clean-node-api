{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "CommonJS",
        "target": "ES2019",
        "esModuleInterop": true,
        "allowJs": true,
        "strictNullChecks": true,
        "noEmit": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    } 
}